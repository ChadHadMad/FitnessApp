<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:FitnessApp.Pages"
    x:Class="FitnessApp.AppShell">

    <TabBar x:Name="MainTabs" IsVisible="False">
        <ShellContent 
            Title="Health Dashboard" 
            ContentTemplate="{DataTemplate pages:HealthDashboardPage}"
            Route="HealthDashboardPage"/>
        <ShellContent 
            Title="Calories" 
            ContentTemplate="{DataTemplate pages:CalorieIntakePage}"
            Route="CalorieIntakePage"/>
        <ShellContent
            Title="Workout"
            ContentTemplate="{DataTemplate pages:WorkoutPage}"
            Route="WorkoutPage"/>
    </TabBar>

    <ShellContent 
        x:Name="HomePageItem"
        Title="Welcome"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage"/>
</Shell>