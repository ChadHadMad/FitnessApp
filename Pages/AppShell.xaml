<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:FitnessApp.Pages"
    x:Class="FitnessApp.AppShell">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="Home" />
        <ShellContent
            Title="User"
            Icon="user.png"
            ContentTemplate="{DataTemplate pages:UserProfilePage}"
            Route="User" />
        <ShellContent 
            Title="Calories" 
            ContentTemplate="{DataTemplate pages:CalorieIntakePage}" />
        <ShellContent
            Title="Workout"
            ContentTemplate="{DataTemplate pages:WorkoutPage}" />
        <ShellContent 
            Title="Health Dashboard" 
            ContentTemplate="{DataTemplate pages:HealthDashboardPage}" />
      
    </TabBar>
</Shell>