<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FitnessApp.Pages.UserProfilePage"
    Title="Your Profile"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <Label Text="Tell us about yourself"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Picker x:Name="GenderPicker"
            Title="Gender">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Male</x:String>
                        <x:String>Female</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Entry x:Name="AgeEntry"
                   Placeholder="Age"
                   Keyboard="Numeric" />
            <Entry x:Name="HeightEntry"
                   Placeholder="Height (cm)"
                   Keyboard="Numeric" />

            <Entry x:Name="WeightEntry"
                   Placeholder="Weight (kg)"
                   Keyboard="Numeric" />
            <Entry x:Name="TargetWeightEntry" 
                   Placeholder="Target Weight (kg)" 
                   Keyboard="Numeric"/>
            <Picker x:Name="ActivityLevelPicker"
                    Title="Activity Level">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Sedentary</x:String>
                        <x:String>Lightly Active</x:String>
                        <x:String>Moderately Active</x:String>
                        <x:String>Very Active</x:String>
                        <x:String>Super Active</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label x:Name="IdealWeightLabel"
                   Text="Ideal Weight: -- kg"
                   FontAttributes="Bold" />

            <Label x:Name="BmiLabel"
                   Text="current BMI: --"
                   FontAttributes="Bold" />

            <Button Text="Save"
                    Clicked="OnSaveProfileClicked"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50" />
        

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>